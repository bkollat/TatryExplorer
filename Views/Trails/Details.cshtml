@model TatryExplorer.Models.Trail
@{
    ViewData["Title"] = "Szczegóły Trasy";
}
<h2>@ViewData["Title"]</h2>

<div>
    <h4>Trasa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Długość)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Długość)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PoziomTrudności)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoziomTrudności)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpisSzlaku)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpisSzlaku)
        </dd>
        <dt class="col-sm-2">
            Liczba odwiedzin
        </dt>
        <dd class="col-sm-10">
            @Model.VisitCount
        </dd>
    </dl>
</div>

<div>
    <button type="button" class="btn btn-primary" onclick="history.back()">Wróć do listy</button>
    <button type="button" class="btn btn-outline-info" onclick="shareTrail('@Url.Action("Details", "Trails", new { id = Model.Id })')">Udostępnij</button>
</div>

<script>
    function shareTrail(url) {
        if (navigator.share) {
            navigator.share({
                title: 'TatryExplorer - Trasa',
                url: url
            }).catch(console.error);
        } else {
            const tempInput = document.createElement('input');
            document.body.appendChild(tempInput);
            tempInput.value = window.location.origin + url;
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            alert('Link został skopiowany do schowka!');
        }
    }
</script>